 <config>
	<modules>
		<Sashas_Sas>
			<version>1.0.0</version>
		</Sashas_Sas>
	</modules>
	<global>
		<helpers>
			<sas>
				<class>Sashas_Sas_Helper</class>
			</sas>
		</helpers>
		<blocks>
			<sas>
				<class>Sashas_Sas_Block</class>
			</sas>
		</blocks>
		<models>
			<sas>
				<class>Sashas_Sas_Model</class>
				<resourceModel>sas_resource</resourceModel>
			</sas>
			<sas_resource>
				<class>Sashas_Sas_Model_Resource</class>				 
			</sas_resource> 
			<core>
				<rewrite>
					<layout>Sashas_Sas_Model_Core_Layout</layout>
				</rewrite>
			</core>
		</models>
		<resources>
			<sas_setup>
				<setup>
					<module>Sashas_Sas</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</sas_setup>
			<sas_write>
				<connection>
					<use>core_write</use>
				</connection>
			</sas_write>
			<sas_read>
				<connection>
					<use>core_read</use>
				</connection>
			</sas_read>
		</resources>
		<page>
			<layouts>
				<extensions_aboutus>
					<label>Full Width</label>
					<template>page/fullwidth.phtml</template>
					 <layout_handle>page_fullwidth</layout_handle>
				</extensions_aboutus>
			</layouts>  		
		</page> 		
	</global>
	<default>
		<sas>
			<sas_group>
				<css_framework><![CDATA[bootstrap]]></css_framework>
			</sas_group>	
			<sas_blocks>
				<poll_block><![CDATA[1]]></poll_block>
				<recenty_viewed_products><![CDATA[1]]></recenty_viewed_products>
				<recenty_compared_products><![CDATA[1]]></recenty_compared_products>
				<paypal_logo><![CDATA[1]]></paypal_logo>
			</sas_blocks>		 
			<sas_layout>
				<category_layout><![CDATA[page/2columns-left.phtml]]></category_layout>
			</sas_layout>
		</sas>
	</default>
</config>